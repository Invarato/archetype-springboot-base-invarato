<archetype-descriptor
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="arquetipo">

    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>

        <requiredProperty key="artifactId">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>

        <requiredProperty key="versionStart">
<!--            <defaultValue>1.0-SNAPSHOT</defaultValue>-->
            <defaultValue>1.0.0</defaultValue>
<!--            <defaultValue>${version}</defaultValue>-->
        </requiredProperty>

        <requiredProperty key="version">
            <!--            <defaultValue>1.0-SNAPSHOT</defaultValue>-->
            <defaultValue>1.0.0</defaultValue>
<!--            <defaultValue>${version}</defaultValue>-->
        </requiredProperty>

    </requiredProperties>

    <fileSets>

        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
        </fileSet>

        <fileSet filtered="false" packaged="false">
            <directory>docker</directory>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="false" preserve-empty-dirs="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/*.properties</exclude>
                <exclude>**/.gitkeep</exclude>
                <exclude>**/*.yaml</exclude>
                <exclude>**/*.yml</exclude>
            </excludes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.yaml</include>
                <include>**/*.yml</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" packaged="true">
            <directory>src/test/java</directory>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.yaml</include>
                <include>**/*.yml</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>compose.yml</include>
<!--                <include>Dockerfile</include>-->
                <include>mvnw</include>
                <include>mvnw.cmd</include>
                <include>.gitignore</include>
                <include>.dockerignore</include>
                <include>liquibase.sh</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory></directory>
            <includes>
                <include>compose-app.yml</include>
                <include>readme.md</include>
                <include>Makefile</include>
                <include>Dockerfile</include>
                <include>skaffold.yaml</include>
                <include>MAKEFILE.md</include>
                <include>SKAFFOLD.md</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>k8s</directory>
            <includes>
                <include>deployment.yaml</include>
                <include>service.yaml</include>
                <include>configmap.yaml</include>
                <include>secret.yaml</include>
                <include>ingress.yaml</include>
                <include>postgres-deployment.yaml</include>
                <include>redis-deployment.yaml</include>
                <include>README.md</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>k8s/dev</directory>
            <includes>
                <include>kustomization.yaml</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>k8s/test</directory>
            <includes>
                <include>kustomization.yaml</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>k8s/staging</directory>
            <includes>
                <include>kustomization.yaml</include>
                <include>hpa.yaml</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>k8s/prod</directory>
            <includes>
                <include>kustomization.yaml</include>
                <include>hpa.yaml</include>
                <include>pdb.yaml</include>
            </includes>
        </fileSet>

    </fileSets>

</archetype-descriptor>